{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@legal-crm/ui": ["packages/ui/src/index.ts"],
      "@legal-crm/ui/*": ["packages/ui/src/*"],
      "@legal-crm/types": ["packages/types/src/index.ts"],
      "@legal-crm/types/*": ["packages/types/src/*"],
      "@legal-crm/sdk": ["packages/sdk/src/index.ts"],
      "@legal-crm/sdk/*": ["packages/sdk/src/*"],
      "@legal-crm/auth": ["packages/auth/src/index.ts"],
      "@legal-crm/auth/*": ["packages/auth/src/*"],
      "@legal-crm/config": ["packages/config/src/index.ts"],
      "@legal-crm/config/*": ["packages/config/src/*"]
    }
  }
}
